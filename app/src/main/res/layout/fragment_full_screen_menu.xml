<?xml version="1.0" encoding="utf-8"?>
<com.zhangly.zmenu.widget.WithViewPagerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWindowBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_tl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_vp_step_pic"
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:transitionName="MenuStepPager"/>

    <com.zhangly.zmenu.widget.ViewPagerIndicator
        android:id="@+id/id_vpi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/id_tv_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="在牛里脊上撒上烟盒呼叫在牛里脊上撒上烟盒呼叫在牛里脊上撒上烟盒呼叫在牛里脊上撒上烟盒呼叫在牛里脊上撒上烟盒呼叫"
        android:textColor="@android:color/black" />

</com.zhangly.zmenu.widget.WithViewPagerLinearLayout>